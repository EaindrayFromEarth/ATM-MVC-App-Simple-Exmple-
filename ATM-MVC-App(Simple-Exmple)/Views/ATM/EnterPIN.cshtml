<!-- EnterPin.cshtml -->
@model CardHolder

<h2>Welcome, @Model.FirstName @Model.LastName!</h2>
<p>Enter Your PIN Number:</p>

<form asp-action="ValidatePin" method="post">
    <label for="pin">PIN:</label>
    <input type="password" id="pin" name="pin" maxlength="4" required>
    <button type="submit">Submit</button>
    <span asp-validation-for="Pinnumber"></span>
</form>
